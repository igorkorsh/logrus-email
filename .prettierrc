{
	"useTabs": true,
	"tabWidth": 2,
	"overrides": [
		{
			"files": ["src/**/*.tsx", "emails/*.tsx"],
			"options": {
				"arrowParens": "avoid",
				"singleAttributePerLine": true,
				"jsxSingleQuote": true,
				"printWidth": 200,
				"proseWrap": "preserve",
				"quoteProps": "consistent",
				"semi": false,
				"singleQuote": true,
				"trailingComma": "none",
				"plugins": ["prettier-plugin-tailwindcss"]
			}
		},
		{
			"files": ["out/*.html", "src/data/*.json"],
			"options": {
				"printWidth": 999,
				"htmlWhitespaceSensitivity": "ignore",
				"bracketSameLine": true
			}
		}
	]
}
